{
  "server": ["cw-maria"],
  "port": 22,
  "server_dir": "/srv/cms",
  "repo": "git@github.com:topdmc/cw-front.git",
  "branch": "master",
  "force_regenerate_git_dir": false,
  "shared_dirs": [
    "bower_components"
  ],
  "prerun": [
    "npm install",
    "node_modules/bower/bin/bower install",
    "rm -rf build",
    "npm run build",
    "pm2 delete start-staging || true"
  ],
  "run_cmd": "npm run start-staging"
}
